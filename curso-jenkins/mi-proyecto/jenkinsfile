Pipiline{
    agent any
    stages{
        stage("Build"){
            steps{
                sh "mvn clean install"
            }
        }

        stage("Test"){
            steps{
                sh "mvn test"
            }
        }

        stage("Deploy"){
            steps{
                echo "simulando un despliegue a un servidor de aplicaciones"
            }
        }
    }

    post{
        always{
            echo "se ejecutara siempre"
        }
        success{
            echo "se ejecutara cuando el pipeline sea exitoso"
        }
        failure{
            echo "se ejecutara si el pipeline falla"
        }
    }
}